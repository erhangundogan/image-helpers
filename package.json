{
  "name": "image-helpers",
  "version": "1.0.0",
  "description": "Helper methods to receive and create HTMLImageElements",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/erhangundogan/image-helpers.git"
  },
  "files": [
    "dist/*",
    "LICENSE.md",
    "README.md"
  ],
  "author": "erhan.gundogan@gmail.com",
  "license": "MIT",
  "private": false,
  "types": "dist/image-helpers.d.ts",
  "main": "dist/cjs/image-helpers.js",
  "module": "dist/es/image-helpers.js",
  "browser": "dist/umd/image-helpers.js",
  "scripts": {
    "clean": "rimraf dist",
    "lint": "eslint \"src/**/*.{js,ts}\"",
    "test": "rimraf coverage && jest --watchAll",
    "build": "npm run clean && NODE_ENV=development rollup -c rollup.config.js",
    "build:prod": "npm run clean && NODE_ENV=production rollup -c rollup.config.js",
    "watch": "npm run clean && NODE_ENV=development rollup -cw rollup.config.js",
    "prepublishOnly": "npm run build:prod"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^18.0.0",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "@rollup/plugin-replace": "^2.4.2",
    "@testing-library/jest-dom": "^5.11.10",
    "@types/jest": "^26.0.22",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "@wessberg/rollup-plugin-ts": "^1.3.11",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-jest": "^24.3.4",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "rollup": "^2.45.1",
    "rollup-plugin-filesize": "^9.1.1",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^26.5.4",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "murmurhash": "^2.0.0",
    "uri-js": "^4.4.1",
    "whatwg-fetch": "^3.6.2"
  },
  "jest": {
    "coverageDirectory": "../coverage",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "*.ts",
      "!index.ts"
    ],
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "rootDir": "src",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  }
}
